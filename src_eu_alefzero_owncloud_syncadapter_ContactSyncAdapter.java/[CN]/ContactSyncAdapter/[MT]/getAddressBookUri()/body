{
  if (mAddrBookUri != null)   return mAddrBookUri;
  AccountManager am=getAccountManager();
  String uri=am.getUserData(getAccount(),AccountAuthenticator.KEY_OC_URL).replace(AccountUtils.WEBDAV_PATH_2_0,AccountUtils.CARDDAV_PATH_2_0);
  uri+="/addressbooks/" + getAccount().name.substring(0,getAccount().name.lastIndexOf('@')) + "/default/";
  mAddrBookUri=uri;
  return uri;
}
