{
  boolean delayInstantPicture=(isInstantPicture() && PreferenceReader.instantPictureUploadViaWiFiOnly(mContext));
  boolean delayInstantVideo=(isInstantVideo() && PreferenceReader.instantVideoUploadViaWiFiOnly(mContext));
  return ((delayInstantPicture || delayInstantVideo) && !ConnectivityUtils.isAppConnectedViaWiFi(mContext));
}
