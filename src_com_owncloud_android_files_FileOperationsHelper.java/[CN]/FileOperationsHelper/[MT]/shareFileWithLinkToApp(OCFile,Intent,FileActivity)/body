{
  if (file != null) {
    callerActivity.showLoadingDialog();
    CreateShareOperation createShare=new CreateShareOperation(file.getRemotePath(),ShareType.PUBLIC_LINK,"",false,"",1,sendIntent);
    createShare.execute(callerActivity.getStorageManager(),callerActivity,callerActivity.getRemoteOperationListener(),callerActivity.getHandler(),callerActivity);
  }
 else {
    Log_OC.wtf(TAG,"Trying to open a NULL OCFile");
  }
}
