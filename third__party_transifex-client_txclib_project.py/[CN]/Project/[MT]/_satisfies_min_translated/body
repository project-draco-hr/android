def _satisfies_min_translated(self, stats, mode=None):
    'Check whether a translation fulfills the filter used for\n        minimum translated percentage.\n\n        Args:\n            perc: The current translation percentage.\n        Returns:\n            True or False\n        '
    cur = self._extract_completed(stats, mode)
    option_name = 'minimum_perc'
    if (self.minimum_perc is not None):
        minimum_percent = self.minimum_perc
    else:
        global_minimum = int((self.get_resource_option('main', option_name) or 0))
        resource_minimum = int((self.get_resource_option(self.resource, option_name) or global_minimum))
        minimum_percent = resource_minimum
    return (cur >= minimum_percent)
