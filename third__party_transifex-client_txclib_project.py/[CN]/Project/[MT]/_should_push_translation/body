def _should_push_translation(self, lang, stats, local_file, force=False):
    'Return whether a local translation file should be\n        pushed to Trasnifex.\n\n        We use the following criteria for that:\n        - If user requested to force the upload.\n        - If language exists in Transifex.\n        - If local file is younger than the remote file.\n\n        Args:\n            lang: The language code to check.\n            stats: The (global) statistics object.\n            local_file: The local translation file.\n            force: A boolean flag.\n        Returns:\n            True or False.\n        '
    if force:
        logger.debug('Push translation due to -f.')
        return True
    try:
        lang_stats = stats[lang]
    except KeyError as e:
        logger.debug(('Language %s does not exist in Transifex.' % lang))
        return True
    if (local_file is not None):
        remote_update = self._extract_updated(lang_stats)
        if self._remote_is_newer(remote_update, local_file):
            msg = 'Remote translation is newer than local file for lang %s'
            logger.debug((msg % lang))
            return False
    return True
