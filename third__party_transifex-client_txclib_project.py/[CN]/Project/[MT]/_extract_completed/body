@classmethod
def _extract_completed(cls, stats, mode=None):
    'Extract the information for the translated percentage from the stats.\n\n        Args:\n            stats: The stats object for a language as returned by Transifex.\n            mode: The mode of translations requested.\n        Returns:\n            The percentage of translation as integer.\n        '
    if (mode == 'reviewed'):
        key = 'reviewed_percentage'
    else:
        key = 'completed'
    try:
        return int(stats[key][:(-1)])
    except KeyError as e:
        return 0
