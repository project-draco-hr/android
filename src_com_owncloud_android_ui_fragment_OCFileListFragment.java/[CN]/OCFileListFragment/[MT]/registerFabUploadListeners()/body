{
  getFabUpload().setOnClickListener(new View.OnClickListener(){
    @Override public void onClick(    View v){
      UploadFilesActivity.startUploadActivityForResult(getActivity(),((FileActivity)getActivity()).getAccount(),FileDisplayActivity.ACTION_SELECT_MULTIPLE_FILES);
      getFabMain().collapse();
      recordMiniFabClick();
    }
  }
);
  getFabUpload().setOnLongClickListener(new View.OnLongClickListener(){
    @Override public boolean onLongClick(    View v){
      Toast.makeText(getActivity(),R.string.actionbar_upload,Toast.LENGTH_SHORT).show();
      return true;
    }
  }
);
}
