{
  if (callerTag.equals(FileDetailFragment.FTAG_CONFIRMATION)) {
    if (mContainerActivity.getStorageManager().getFileById(mTargetFile.getFileId()) != null) {
      RemoteOperation operation=new RemoveFileOperation(mTargetFile,true,mContainerActivity.getStorageManager());
      operation.execute(AccountUtils.getCurrentOwnCloudAccount(getSherlockActivity()),getSherlockActivity(),mContainerActivity,mHandler);
      getActivity().showDialog(FileDisplayActivity.DIALOG_SHORT_WAIT);
    }
    if (mCurrentDialog != null) {
      mCurrentDialog.dismiss();
      mCurrentDialog=null;
    }
  }
}
