{
  CreateRemoteShareOperation operation=new CreateRemoteShareOperation(mPath,mShareType,mShareeName,false,"",ALL_PRIVILEGES);
  operation.setGetShareDetails(true);
  RemoteOperationResult result=operation.execute(client);
  if (result.isSuccess()) {
    if (result.getData().size() > 0) {
      OCShare share=(OCShare)result.getData().get(0);
      updateData(share);
    }
  }
  return result;
}
