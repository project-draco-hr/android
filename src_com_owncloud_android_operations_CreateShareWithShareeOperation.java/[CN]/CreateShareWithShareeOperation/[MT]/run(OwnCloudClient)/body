{
  RemoteOperation operation=new CreateRemoteShareOperation(mPath,(mWithGroup ? ShareType.GROUP : ShareType.USER),mTargetName,false,"",READ_ONLY);
  RemoteOperationResult result=operation.execute(client);
  if (result.isSuccess()) {
    if (result.getData().size() > 0) {
      OCShare share=(OCShare)result.getData().get(0);
      updateData(share);
    }
  }
  return result;
}
