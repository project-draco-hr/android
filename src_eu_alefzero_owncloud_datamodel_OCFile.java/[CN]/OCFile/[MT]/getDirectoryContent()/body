{
  if (isDirectory() && id != -1) {
    Vector<OCFile> ret=new Vector<OCFile>();
    Uri req_uri=Uri.withAppendedPath(ProviderTableMeta.CONTENT_URI_DIR,String.valueOf(id));
    Cursor c=null;
    if (providerClient != null) {
      try {
        c=providerClient.query(req_uri,null,null,null,null);
      }
 catch (      RemoteException e) {
        Log.e(TAG,e.getMessage());
        return ret;
      }
    }
 else {
      c=contentResolver.query(req_uri,null,null,null,null);
    }
    if (c.moveToFirst())     do {
      OCFile child=new OCFile(providerClient,account);
      child.setFileData(c);
      ret.add(child);
    }
 while (c.moveToNext());
    c.close();
    return ret;
  }
  return null;
}
