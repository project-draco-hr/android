{
  this.providerClient=cp;
  this.account=account;
  try {
    Cursor c=this.providerClient.query(ProviderTableMeta.CONTENT_URI_FILE,null,ProviderTableMeta.FILE_ACCOUNT_OWNER + "=? AND " + ProviderTableMeta.FILE_PATH+ "=?",new String[]{this.account.name,path},null);
    if (c.moveToFirst()) {
      setFileData(c);
      if (remotePath != null)       remotePath=path;
    }
  }
 catch (  RemoteException e) {
    Log.d(TAG,e.getMessage());
  }
}
