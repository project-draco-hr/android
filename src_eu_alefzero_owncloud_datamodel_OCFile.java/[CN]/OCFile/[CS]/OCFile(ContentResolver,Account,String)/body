{
  contentResolver_=contentResolver;
  account_=account;
  Cursor c=contentResolver_.query(ProviderTableMeta.CONTENT_URI_FILE,null,ProviderTableMeta.FILE_ACCOUNT_OWNER + "=? AND " + ProviderTableMeta.FILE_PATH+ "=?",new String[]{account_.name,path},null);
  if (c.moveToFirst()) {
    setFileData(c);
    if (path_ != null)     path_=path;
  }
}
