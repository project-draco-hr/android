{
  String confirmationTarget=getArguments().getString(ARG_CONF_TARGET);
  if (confirmationTarget == null)   confirmationTarget="";
  return new AlertDialog.Builder(getActivity()).setIcon(android.R.drawable.ic_dialog_alert).setMessage(String.format(getString(R.string.confirmation_alert_prefix),confirmationTarget)).setPositiveButton(R.string.common_ok,new DialogInterface.OnClickListener(){
    public void onClick(    DialogInterface dialog,    int whichButton){
      mListener.onConfirmation(true,getTag());
    }
  }
).setNegativeButton(R.string.common_cancel,new DialogInterface.OnClickListener(){
    public void onClick(    DialogInterface dialog,    int whichButton){
      mListener.onConfirmation(false,getTag());
    }
  }
).create();
}
