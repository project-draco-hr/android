{
  final TabView tabView=createTabView(tab,false);
  mTabLayout.addView(tabView,position,new IcsLinearLayout.LayoutParams(0,LayoutParams.MATCH_PARENT,1));
  if (mTabSpinner != null) {
    ((TabAdapter)mTabSpinner.getAdapter()).notifyDataSetChanged();
  }
  if (setSelected) {
    tabView.setSelected(true);
  }
  if (mAllowCollapse) {
    requestLayout();
  }
}
