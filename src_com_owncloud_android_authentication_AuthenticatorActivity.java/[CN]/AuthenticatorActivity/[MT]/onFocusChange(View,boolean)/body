{
  if (view.getId() == R.id.hostUrlInput) {
    if (!hasFocus) {
      onUrlInputFocusLost((TextView)view);
      if (!mServerIsValid) {
        showRefreshButton();
      }
    }
 else {
      hideRefreshButton();
    }
  }
 else   if (view.getId() == R.id.account_password) {
    onPasswordFocusChanged((TextView)view,hasFocus);
  }
}
