{
  mAuthToken=sessionCookie;
  if (sessionCookie != null && sessionCookie.length() > 0) {
    Log_OC.d(TAG,"Successful SSO - time to save the account");
    mAuthToken=sessionCookie;
    boolean success=true;
    if (mAction == ACTION_CREATE) {
      success=createAccount();
    }
 else {
      updateToken();
    }
    if (success) {
      finish();
    }
  }
}
