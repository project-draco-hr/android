{
  if (dir.exists()) {
    long result=0;
    File[] fileList=dir.listFiles();
    for (int i=0; i < fileList.length; i++) {
      if (fileList[i].isDirectory()) {
        result+=getFolderSize(fileList[i]);
      }
 else {
        result+=fileList[i].length();
      }
    }
    return result;
  }
  return 0;
}
