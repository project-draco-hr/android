def confirm(prompt='Continue?', default=True):
    '\n    Prompt the user for a Yes/No answer.\n\n    Args:\n        prompt: The text displayed to the user ([Y/n] will be appended)\n        default: If the default value will be yes or no\n    '
    valid_yes = ['Y', 'y', 'Yes', 'yes']
    valid_no = ['N', 'n', 'No', 'no']
    if default:
        prompt = (prompt + '[Y/n]')
        valid_yes.append('')
    else:
        prompt = (prompt + '[y/N]')
        valid_no.append('')
    ans = raw_input(prompt)
    while ((ans not in valid_yes) and (ans not in valid_no)):
        ans = raw_input(prompt)
    return (ans in valid_yes)
