def find_dot_tx(path=os.path.curdir, previous=None):
    "\n    Return the path where .tx folder is found.\n\n    The 'path' should be a DIRECTORY.\n    This process is functioning recursively from the current directory to each\n    one of the ancestors dirs.\n    "
    path = os.path.abspath(path)
    if (path == previous):
        return None
    joined = os.path.join(path, '.tx')
    if os.path.isdir(joined):
        return path
    else:
        return find_dot_tx(os.path.dirname(path), path)
