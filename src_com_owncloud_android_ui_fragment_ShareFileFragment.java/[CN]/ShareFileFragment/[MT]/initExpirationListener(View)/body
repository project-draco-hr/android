{
  mOnExpirationDateInteractionListener=new OnExpirationDateInteractionListener();
  ((Switch)shareView.findViewById(R.id.shareViaLinkExpirationSwitch)).setOnCheckedChangeListener(mOnExpirationDateInteractionListener);
