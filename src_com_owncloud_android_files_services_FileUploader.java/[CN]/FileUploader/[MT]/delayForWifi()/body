{
  boolean delayInstantPicture=(mCurrentUpload.isInstantPicture() && PreferenceReader.instantPictureUploadViaWiFiOnly(this));
  boolean delayInstantVideo=(mCurrentUpload.isInstantVideo() && PreferenceReader.instantVideoUploadViaWiFiOnly(this));
  if ((delayInstantPicture || delayInstantVideo) && !ConnectivityUtils.isAppConnectedViaWiFi(this)) {
    Log_OC.d(TAG,"Upload delayed until WiFi is available: " + mCurrentUpload.getRemotePath());
    mPendingUploads.removePayload(mCurrentUpload.getAccount().name,mCurrentUpload.getRemotePath());
    mUploadsStorageManager.updateDatabaseUploadResult(new RemoteOperationResult(ResultCode.DELAYED_FOR_WIFI),mCurrentUpload);
    return true;
  }
  return false;
}
