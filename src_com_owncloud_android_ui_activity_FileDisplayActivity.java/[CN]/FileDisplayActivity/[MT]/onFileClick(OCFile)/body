{
  if (file != null && PreviewImageFragment.canBePreviewed(file)) {
    startPreviewImage(file);
  }
 else   if (file != null && PreviewMediaFragment.canBePreviewed(file)) {
    if (file.isDown()) {
      startMediaPreview(file);
    }
 else {
      startDownloadForPreview(file);
    }
  }
 else {
    startDetails(file);
  }
}
