{
  if (getAccount() != null) {
    mStorageManager=new FileDataStorageManager(getAccount(),getContentResolver());
    OCFile file=getFile();
    if (file != null) {
      file=mStorageManager.getFileByPath(file.getRemotePath());
    }
    if (file == null) {
      file=mStorageManager.getFileByPath(OCFile.PATH_SEPARATOR);
    }
    setFile(file);
    while (file != null && file.getFileName() != OCFile.PATH_SEPARATOR) {
      if (file.isDirectory()) {
        mDirectories.add(file.getFileName());
      }
      file=mStorageManager.getFileById(file.getParentId());
    }
    mDirectories.add(OCFile.PATH_SEPARATOR);
    if (!stateWasRecovered) {
      Log_OC.e(TAG,"Initializing Fragments in onAccountChanged..");
      initFragmentsWithFile();
    }
  }
 else {
    Log_OC.wtf(TAG,"onAccountChanged was called with NULL account associated!");
  }
}
