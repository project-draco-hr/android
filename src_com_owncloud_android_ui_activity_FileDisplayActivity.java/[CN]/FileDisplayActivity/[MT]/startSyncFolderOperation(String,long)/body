{
  long currentSyncTime=System.currentTimeMillis();
  setSupportProgressBarIndeterminateVisibility(true);
  RemoteOperation synchFolderOp=new SynchronizeFolderOperation(remotePath,currentSyncTime,parentId,getStorageManager(),getAccount(),getApplicationContext());
