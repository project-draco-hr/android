{
  super.onPostCreate(savedInstanceState);
  if (ContextCompat.checkSelfPermission(this,Manifest.permission.WRITE_EXTERNAL_STORAGE) != android.content.pm.PackageManager.PERMISSION_GRANTED) {
    if (ActivityCompat.shouldShowRequestPermissionRationale(this,Manifest.permission.WRITE_EXTERNAL_STORAGE)) {
      Snackbar.make(findViewById(R.id.ListLayout),R.string.permission_storage_access,Snackbar.LENGTH_INDEFINITE).setAction(R.string.common_ok,new View.OnClickListener(){
        @Override public void onClick(        View v){
          requestWriteExternalStoreagePermission();
        }
      }
).show();
    }
 else {
      requestWriteExternalStoreagePermission();
    }
  }
  if (savedInstanceState == null) {
    createMinFragments();
  }
  mProgressBar.setIndeterminate(mSyncInProgress);
  setBackgroundText();
}
