{
  mFile=mIntent.getParcelableExtra(FILE);
  if (mFile != null) {
    setFilename(mFile.getFileName());
    setFiletype(DisplayUtils.convertMIMEtoPrettyPrint(mFile.getMimetype()));
    setFilesize(mFile.getFileLength());
    VideoView videoView=(VideoView)getView().findViewById(R.id.videoView1);
    videoView.setVisibility(View.INVISIBLE);
    if (mFile.getStoragePath() == null) {
      ImageView imageView=(ImageView)getView().findViewById(R.id.imageView2);
      imageView.setImageResource(R.drawable.download);
      imageView.setOnClickListener(this);
    }
 else {
      if (mFile.getMimetype().startsWith("image/")) {
        ImageView imageView=(ImageView)getView().findViewById(R.id.imageView2);
        Bitmap bmp=BitmapFactory.decodeFile(mFile.getStoragePath());
        imageView.setImageBitmap(bmp);
      }
 else       if (mFile.getMimetype().startsWith("video/")) {
        videoView.setVisibility(View.VISIBLE);
        videoView.setVideoPath(mFile.getStoragePath());
        videoView.start();
      }
    }
  }
}
