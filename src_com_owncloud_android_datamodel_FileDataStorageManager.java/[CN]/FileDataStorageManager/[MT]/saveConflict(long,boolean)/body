{
  ContentValues cv=new ContentValues();
  cv.put(ProviderTableMeta.FILE_IN_CONFLICT,inConflict);
  if (getContentResolver() != null) {
    getContentResolver().update(ProviderTableMeta.CONTENT_URI_FILE,cv,ProviderTableMeta._ID + "=?",new String[]{String.valueOf(fileId)});
  }
 else {
    try {
      getContentProviderClient().update(ProviderTableMeta.CONTENT_URI_FILE,cv,ProviderTableMeta._ID + "=?",new String[]{String.valueOf(fileId)});
    }
 catch (    RemoteException e) {
      Log_OC.e(TAG,"Failed saving conflict in database " + e.getMessage());
    }
  }
}
