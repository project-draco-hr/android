{
  boolean success=true;
  if (folder.exists()) {
    File[] files=folder.listFiles();
    if (files != null) {
      for (      File file : files) {
        if (file.isDirectory()) {
          success&=removeLocalFolder(file);
        }
 else {
          success&=file.delete();
        }
      }
    }
    success&=folder.delete();
  }
  return success;
}
