{
  if (raw == null) {
    return null;
  }
  final StringBuilder hex=new StringBuilder(2 * raw.length);
  for (  final byte b : raw) {
    final int hiVal=(b & 0xF0) >> 4;
    final int loVal=b & 0x0F;
    hex.append((char)('0' + (hiVal + (hiVal / 10 * 7))));
    hex.append((char)('0' + (loVal + (loVal / 10 * 7))));
  }
  return hex.toString();
}
