{
  List<OCFile> children=getStorageManager().getFolderContent(mLocalFolder);
  for (  OCFile child : children) {
    if (child.isFolder()) {
synchronized (mCancellationRequested) {
        if (mCancellationRequested.get()) {
          throw new OperationCancelledException();
        }
        startSyncFolderOperation(child.getRemotePath());
      }
    }
 else {
      if (!child.isDown()) {
        mFilesForDirectDownload.add(child);
      }
 else {
        SynchronizeFileOperation operation=new SynchronizeFileOperation(child,child,mAccount,true,mContext);
        mFilesToSyncContents.add(operation);
      }
    }
  }
}
