{
  if (context != null && mSendIntent != null && mSendIntent.getStringExtra(Intent.EXTRA_SUBJECT) != null) {
    if (getClient() == null || getClient().getCredentials().getUsername() == null) {
      mSendIntent.putExtra(Intent.EXTRA_SUBJECT,context.getString(R.string.subject_shared_with_you,mFileName));
    }
 else {
      mSendIntent.putExtra(Intent.EXTRA_SUBJECT,context.getString(R.string.subject_user_shared_with_you,getClient().getCredentials().getUsername(),mFileName));
    }
  }
  return mSendIntent;
}
