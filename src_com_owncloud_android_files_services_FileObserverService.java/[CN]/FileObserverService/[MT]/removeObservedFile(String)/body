{
  if (path == null)   return;
  if (mObservers == null) {
    initializeObservedList();
  }
  for (int i=0; i < mObservers.size(); ++i) {
    OwnCloudFileObserver observer=mObservers.get(i);
    if (observer.getPath().equals(path)) {
      observer.stopWatching();
      mObservers.remove(i);
      Log.d(TAG,"Stopped watching " + path);
      break;
    }
  }
}
