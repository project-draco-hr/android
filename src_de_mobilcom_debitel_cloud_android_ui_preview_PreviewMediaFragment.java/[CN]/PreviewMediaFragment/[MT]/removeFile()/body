{
  ConfirmationDialogFragment confDialog=ConfirmationDialogFragment.newInstance(R.string.confirmation_remove_alert,new String[]{getFile().getFileName()},R.string.confirmation_remove_remote_and_local,R.string.confirmation_remove_local,R.string.common_cancel);
