{
  OCShare publicShare=getStorageManager().getFirstShareByPathAndType(mPath,ShareType.PUBLIC_LINK,"");
  if (publicShare == null) {
  }
  RemoteOperation operation=new UpdateRemoteShareOperation(publicShare.getRemoteId());
  ((UpdateRemoteShareOperation)operation).setPassword(mPassword);
  RemoteOperationResult result=operation.execute(client);
  if (result.isSuccess()) {
    operation=new GetRemoteShareOperation(publicShare.getRemoteId());
    result=operation.execute(client);
    if (result.isSuccess()) {
      OCShare share=(OCShare)result.getData().get(0);
      updateData(share);
    }
  }
  return result;
}
